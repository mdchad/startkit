<div class="container-fluid">
  <div class="col-md-12">
    <div class="col-md-3">
      <% for (var i = 0; i < data.follows.length; i++) { %>
        <% var follow = '' %>
            <% if (data.follows[i].userId === currentUser.id) { %>
              <% follow = true %>
            <% } %>
      <% } %>
      <% if (follow) { %>
        <a href="/follow/<%= data.id %>" id="<%= data.id %>" class="followButton"><button class="button tiny change white">Unfollow</button></a>
      <% } else { %>
        <a href="/follow/<%= data.id %>" id="<%= data.id %>" class="followButton"><button class="button tiny change">Follow</button></a>
      <% } %>
      <br>

      <a href="#" class="button tiny byline2">Join</a>
      <p class="byline4"><%= data.follows.length %> followers</p>
      <p class="byline">Submited by </p>
      <p class="byline3"><%= data.user.fullName %><p>
      <a href=#description class="linkchange">Description</a><br />
      <a href=#businessPlan class="linkchange">Business Plan</a><br />
      <a href=#teams class="linkchange">Teams</a><br />
      <a href=#comment class="linkchange">Comments</a>
    </div>
    <div class="col-md-8 read">
      <h1 class="maintitle"><%= data.title %></h1>
      <h4 id="description">Description</h4>
      <hr>
      <p><%= data.description %></p>
      <br />
      <h4 id="businessPlan">Business Plan</h4>
      <hr>
      <p><%= data.businessplan %></p>
      <br />
      <h4 id="comment">Comment</h4>
      <hr>
      <form class="form-group col-md-12" id="commentUser">
        <textarea id='ideaComment' class="form-control" name="comment" rows="4" cols="40"></textarea>
        <br>
        <button id='submitButton' class="button white" type="submit" value='<%= data.id %>'>Submit</button>
      </form>
      <br>
      <h5>All Comments</h5>
      <hr>
      <div class="allcomment">
        <% for (var i = 0; i < data.commentIdeas.length; i++) { %>
          <p class="commentSection"><%= data.commentIdeas[i].comment %></p>
          <p class="byline below commentFooter">By <%= data.user.fullName %>: <%= data.commentIdeas[i].createdAt %></p>
          <hr>
        <% } %>
      </div>
    </div>
  </div>
</div>
